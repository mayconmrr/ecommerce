<div class="thumbnail">
  <%= image_tag @ad.picture.url(:large), class:"img-responsive" %>
  <div class="caption-full">
    <h4 class="pull-right"><%= humanized_money_with_symbol @ad.price %></h4>
    <h4><a href="#"><%= @ad.title %></a></h4>
    <%= @ad.description.html_safe %>
  </div>
</div>

<div class="well">
  <% if member_signed_in? %>
    <button type="button" class="btn btn-success btn-lg btn-block" data-toggle="modal" data-target="#confirmationModal">
      Finalizar Compra
    </button>
    <%= render 'confirmation' %>
  <% else %>
    <div class="text-center">
      <%= link_to "Efetue o login para comprar", new_member_session_path, class:"btn btn-danger" %>
    </div>
  <% end %>
</div>

<div class="well well-sm">
  <div class="ratings">
    <p class="pull-right"><%= @ad.rates('quality').count %> <%= t("labels.#{review_label(@ad)}") %></p>
    <%= rating_for @ad, 'quality', star_path: '/images/ratyrate' %>
  </div>
</div>

<div class="well">
  <% if member_signed_in? %>
    <div class="text-right">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#commentModal">
        Deixe um coment√°rio
      </button>
    </div>
  <% else %>
    <div class="text-right">
      <%= link_to "Efetue o login para comentar", new_member_session_path, class:"btn btn-primary" %>
    </div>
  <% end %>
  <hr>
  <%= render 'comments' %>
</div>
<%= render 'comment_modal' %>
